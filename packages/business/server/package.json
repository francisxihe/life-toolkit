{
  "name": "@life-toolkit/business-server",
  "version": "0.0.2",
  "description": "业务服务器",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "files": [
    "src",
    "README.md"
