    "francis-types-repeat": "0.0.1",
    "@life-toolkit/mapped-types": "workspace:*",
    "tsup": "^7.0.0",
    "ts-mixer": "^6.0.3"
  },
  "tsup": {
    "external": [
      "@nestjs/common",
      "@nestjs/core",
      "@nestjs/microservices",
      "@nestjs/platform-express",
      "reflect-metadata",
      "rxjs"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/life-toolkit/life-toolkit.git",
