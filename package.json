{
  "name": "life-toolkit",
  "private": true,
  "packageManager": "pnpm@9.7.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --filter=life-toolkit-server & turbo run dev --filter=life-toolkit-web",
    "build": "turbo run build",
    "build:desktop": "turbo run build --filter=life-toolkit-desktop",
    "clean": "turbo run clean",
    "predeploy": "npm run build",
    "pre-commit": "turbo run pre-commit",
    "dev:server": "turbo run dev --filter=life-toolkit-server",
    "dev:web": "turbo run dev --filter=life-toolkit-web",
    "dev:desktop": "turbo run dev --filter=life-toolkit-desktop",
    "deploy:server": "turbo run deploy --filter=life-toolkit-server",
    "deploy:web": "turbo run deploy --filter=life-toolkit-web"
  },
  "devDependencies": {
    "@life-toolkit/vo": "workspace:*",
    "@types/jest": "^29.5.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "22.13.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "dayjs": "^1.11.13",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.5.0",
    "lodash-es": "^4.17.21",
    "prettier": "^3.1.0",
    "sharp": "^0.34.2",
    "ts-jest": "^29.1.0",
    "turbo": "^2.0.1",
    "typescript": "^5.1.3"
  },
  "pnpm": {
    "overrides": {
      "@types/node": "22.13.0",
      "vite": "5.4.15"
    }
  }
}
