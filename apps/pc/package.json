{
 "name": "life-toolkit-pc",
 "version": "1.0.0",
 "description": "Web页面浏览器",
 "type": "module",
 "main": "dist/main/index.js",
 "author": "francisxihe",
 "scripts": {
  "dev": "electron-vite dev ",
  "build": "electron-vite build",
  "package": "electron-builder",
  "build:mac": "electron-vite build && electron-builder --mac --dir",
  "pack-win": "electron-vite build && electron-builder --win",
  "pack-mac": "electron-vite build && electron-builder --mac",
  "pack-linux": "electron-vite build && electron-builder --linux",
  "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist && rm -rf .vite"
 },
 "dependencies": {
    "@life-toolkit/vo": "workspace:*",
    "@life-toolkit/share-types": "workspace:*",
    "sqlite3": "^5.1.6",
    "typeorm": "^0.3.17",
    "reflect-metadata": "^0.1.13",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "uuid": "^9.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
 "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/uuid": "^9.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "electron": "^36.0.0",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^3.2.1",
    "electron-is-dev": "^2.0.0",
    "electron-vite": "^3.1.0",
     "typescript": "^5.0.0"
   },
   "build": {
  "appId": "com.lifetoolkit.app",
  "productName": "Web浏览器",
  "files": [
   "dist/**/*"
  ],
  "extraMetadata": {
   "dependencies": {}
  },
  "directories": {
   "buildResources": "assets",
   "output": "release"
  },
  "asar": true,
  "nodeGypRebuild": false,
  "npmRebuild": false,
  "mac": {
   "category": "public.app-category.productivity",
   "target": "dir"
  },
  "win": {
   "target": "dir"
  },
  "linux": {
   "target": "dir"
  }
 }
}
