{
  "name": "life-toolkit-web",
  "version": "1.0.0",
  "description": "Life ToolKit Web",
  "homepage": "https://francisxihe.github.io/life-toolkit",
  "scripts": {
    "dev": "vite --mode dev",
    "dev:prod": "vite --mode prod",
    "preview": "vite preview",
    "build": "vite build --mode prod",
    "eslint": "eslint src/ --ext .ts,.tsx,.js,.jsx --fix --cache",
    "stylelint": "stylelint 'src/**/*.less' 'src/**/*.css' --fix --cache",
    "pre-commit": "pretty-quick --staged && npm run eslint && npm run stylelint",
    "predeploy": "pnpm build",
    "lint": "npm run eslint && npm run stylelint",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist && rm -rf .vite",
    "deploy": "./deploy.sh"
  },
  "dependencies": {
    "@life-toolkit/business-web": "workspace:*",
    "react": "^18.0.2",
    "react-dom": "^18.0.2"
  },
  "devDependencies": {
    "@arco-plugins/vite-plugin-svgr": "^0.7.2",
    "@arco-plugins/vite-react": "^1.0.5",
    "@tailwindcss/vite": "^4.1.11",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^7.0.2",
    "less": "^4.1.2",
    "postcss": "8.4.30",
    "pretty-quick": "^3.1.2",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "tailwindcss": "4.1.11",
    "vite": "^5.0.0",
    "vite-plugin-html": "^3.2.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --cache"
    ],
    "*.{css, less}": [
      "stylelint --fix"
    ]
  }
}
