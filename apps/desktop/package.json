{
  "name": "life-toolkit-desktop",
  "version": "1.0.0",
  "description": "life toolkit",
  "type": "module",
  "main": "dist/main/index.js",
  "author": "francisxihe",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "NODE_ENV=production electron-vite build --mode production",
    "package": "electron-builder",
    "build:mac": "NODE_ENV=production electron-vite build --mode production && electron-builder --mac --dir",
    "pack-win": "node scripts/pack-with-polyfills.cjs win",
    "pack-mac": "node scripts/pack-with-polyfills.cjs mac",
    "pack-linux": "node scripts/pack-with-polyfills.cjs linux",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist && rm -rf .vite",
    "sync-entities": "node scripts/sync-entities.js",
    "sync-entities:watch": "node scripts/sync-entities.js --watch"
  },
  "dependencies": {
    "@life-toolkit/business-server": "workspace:*",
    "chinese-holiday-calendar": "0.0.1",
    "@life-toolkit/business-web": "workspace:*",
    "electron-ipc-restful": "0.0.1",
    "@life-toolkit/enum": "workspace:*",
    "@life-toolkit/mapped-types": "workspace:*",
    "@life-toolkit/share-types": "workspace:*",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.6",
    "typeorm": "^0.3.17",
    "typeorm-naming-strategies": "^4.1.0",
    "lodash": "^4.17.21",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@arco-plugins/vite-plugin-svgr": "^0.7.2",
    "@arco-plugins/vite-react": "^1.3.3",
    "@swc/core": "^1.13.4",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^18.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "chokidar": "^4.0.3",
    "electron": "^36.0.0",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^3.2.1",
    "electron-is-dev": "^2.0.0",
    "electron-vite": "^3.1.0",
    "less": "^4.1.2",
    "vite": "^5.0.0",
    "vite-plugin-swc": "^0.0.2"
  },
  "build": {
    "appId": "com.lifetoolkit.app",
    "productName": "life toolkit",
    "files": [
      "dist/**/*"
    ],
    "extraMetadata": {
      "dependencies": {
        "tslib": "^2.6.2",
        "inherits": "^2.0.4",
        "safe-buffer": "^5.2.1",
        "to-buffer": "^1.1.1",
        "es-errors": "^1.3.0",
        "typed-array-buffer": "^1.0.3",
        "typed-array-byte-length": "^1.0.1",
        "typed-array-byte-offset": "^1.0.2",
        "which-typed-array": "^1.1.15",
        "has-symbols": "^1.0.3",
        "has-proto": "^1.0.3",
        "function-bind": "^1.1.2",
        "get-intrinsic": "^1.2.4",
        "has-property-descriptors": "^1.0.2",
        "gopd": "^1.0.1",
        "define-data-property": "^1.1.4",
        "concat-map": "^0.0.1",
        "brace-expansion": "^1.1.11",
        "minimatch": "^3.1.2",
        "balanced-match": "^1.0.2",
        "glob": "^7.2.3",
        "fs.realpath": "^1.0.0",
        "inflight": "^1.0.6",
        "once": "^1.4.0",
        "wrappy": "^1.0.2",
        "path-is-absolute": "^1.0.1",
        "path-scurry": "^1.10.1"
      }
    },
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "asar": true,
    "nodeGypRebuild": false,
    "npmRebuild": false,
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dir"
    },
    "win": {
      "target": "dir"
    },
    "linux": {
      "target": "dir"
    }
  }
}
