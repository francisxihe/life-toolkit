{
  "name": "life-toolkit-server",
  "version": "1.0.0",
  "description": "Life Toolkit Server",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/main.js",
    "build": "nest build",
    "dev": "cross-env NODE_ENV=development nest start --watch",
    "debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "deploy": "pnpm run build && ./deploy.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:habit": "jest --testPathPattern=\"habit\"",
    "test:habit:unit": "jest --testPathPattern=\"habit\" --testNamePattern=\"^((?!integration).)*$\"",
    "test:habit:integration": "jest --testPathPattern=\"habit.integration\"",
    "test:habit:coverage": "jest --testPathPattern=\"habit\" --coverage --coverageDirectory=coverage/habit"
  },
  "dependencies": {
    "@life-toolkit/components-repeat": "workspace:*",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.0.6",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^3.0.0",
    "@nestjs/typeorm": "^10.0.1",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dayjs": "^1.11.13",
    "ical-generator": "^8.0.1",
    "mysql2": "^3.6.1",
    "openai": "^4.77.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "ts-loader": "^9.5.2",
    "typeorm": "^0.3.17",
    "typeorm-naming-strategies": "^4.1.0",
    "uuid": "^11.0.5",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/module-alias": "^2.0.4",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^7.0.3",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-paths-webpack-plugin": "^4.2.0"
  }
}
