{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "start": {
      "cache": false,
      "persistent": true,
      "inputs": ["apps/**/*.ts", "packages/**/*.ts"]
    },
    "debug": {
      "cache": false,
      "persistent": true,
      "inputs": ["apps/**/*.ts", "packages/**/*.ts"]
    },
    "pre-commit": {
      "cache": false,
      "persistent": true,
      "inputs": ["apps/**/*.ts", "packages/**/*.ts"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["apps/server/**/*.ts", "apps/web/**/*.ts"]
    },
    "deploy": {
      "cache": false,
      "persistent": true,
      "inputs": ["apps/server/**/*.ts", "apps/web/**/*.ts"]
    },
    "sync:entity": {
      "cache": false,
      "persistent": true,
      "inputs": ["apps/supporter/**/*.ts"]
    }
  }
}
